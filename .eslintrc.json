{
  "root": true,
  "env": {
    "browser": false,
    "es2021": true
  },
  "extends": "airbnb-base",
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", { "comments": 160, "code": 160 }],
    "import/extensions": ["error", "ignorePackages", {
      "js": "always",
      "mjs": "always"
    }],
    "import/no-dynamic-require": "off"
  },
  "globals": {
    "Joomla": "writable",
    "tinyMCE": "readonly",
    "tinymce": "readonly"
  }
}

